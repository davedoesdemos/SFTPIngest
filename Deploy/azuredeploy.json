{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "sftpservername": "[concat('sftp', uniqueString(resourceGroup().id))]",
    "datastorename": "[concat('datastore', uniqueString(resourceGroup().id))]",
    "adfname": "[concat('adf', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-04-01",
      "name": "nsg01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "access": "Allow",
              "destinationAddressPrefix": "*",
              "destinationAddressPrefixes": [],
              "destinationPortRange": "22",
              "destinationPortRanges": [],
              "direction": "Inbound",
              "priority": 300,
              "protocol": "Tcp",
              "sourceAddressPrefix": "*",
              "sourceAddressPrefixes": [],
              "sourcePortRange": "*",
              "sourcePortRanges": []
            }
          }
        ]
      }
    },
    {
      "name": "vnet01",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "vnet01"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "192.168.1.0/24"
          ]
        },
        "subnets": [
          {
            "name": "subnet01",
            "properties": {
              "addressPrefix": "192.168.1.0/24"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-04-01",
      "name": "SFTP01_IP",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Basic",
        "tier": "Regional"
      },
      "properties": {
        "publicIPAddressVersion": "IPv4",
        "publicIPAllocationMethod": "Dynamic",
        "idleTimeoutInMinutes": 4,
        "ipTags": []
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-04-01",
      "location": "[resourceGroup().location]",
      "name": "SFTP01_NIC",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses','ir01_IP')]",
        "[resourceId('Microsoft.Network/virtualNetworks','vnet01')]",
        "[resourceId('Microsoft.Network/networkSecurityGroups','nsg01')]"
      ],
      "properties": {
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups','nsg01')]"
        },
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'ir01_IP')]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet01', 'subnet01')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2018-10-01",
      "name": "[variables('sftpservername')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', 'SFTP01_NIC')]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', 'nsg01')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_D2_v3"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "18.04-LTS",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "diskSizeGB": 127
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "sftp01",
          "adminUsername": "demogod",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'SFTP01_NIC')]"
            }
          ]
        }
      }
    },
    {
      "name": "[variables('datastorename')]",
      "apiVersion": "2018-07-01",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS"
      },
      "location": "[resourceGroup().location]",
      "kind": "StorageV2",
      "resources": [
        {
          "type": "blobServices",
          "name": "default",
          "apiVersion": "2018-07-01",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('datastorename'))]"
          ]
        }
      ]
    },
    {
      "name": "[variables('adfname')]",
      "apiVersion": "2018-06-01",
      "type": "Microsoft.DataFactory/factories",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      }
    }
  ],
      "outputs": {}
}
